{
  "name": "cdk-mar-backend-base",
  "version": "0.0.0",
  "main": "bin/app.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest --coverage > COVERAGE.md",
    "cdk": "cdk",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "eslint": "npx eslint --fix --max-warnings=0 ./packages",
    "tsdoc": "npx typedoc --theme markdown"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{ts,tsx}": "tsc-files --noEmit --emitDeclarationOnly false",
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mapfre-mar/cdk-mar-aspects": "1.0.0",
    "@mapfre-mar/cdk-mar-patterns": "1.0.0",
    "aws-cdk-lib": "2.66.1",
    "cdk-dia": "0.7.1",
    "constructs": "10.1.263",
    "jest-junit": "15.0.0",
    "properties-reader": "2.2.0"
  },
  "devDependencies": {
    "@types/jest": "27.5.2",
    "@types/node": "10.17.27",
    "@types/prettier": "2.6.0",
    "aws-cdk": "2.66.1",
    "esbuild": "0.15.10",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "ts-jest": "27.1.4",
    "ts-node": "10.9.1",
    "tsc-files": "1.1.3",
    "typedoc-plugin-markdown": "3.13.6",
    "typescript": "4.8.4"
  }
}
